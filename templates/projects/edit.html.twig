{%extends 'general.html.twig'%}
{%block body%}  
    <label>
        Name: {{project.Name}}
    </label>
    {{form_start(form)}}
        <div class="form-group col-md-4">
            {{form_widget(form.Name, {'attr':{'class':'form-control', 'autofocus':'on'}})}}
        </div>
        <div class="form-group col-md-4">
            {{form_widget(form.Submit, {'attr':{'type':'button', 
            'class':'btn btn-primary btn-lg btn-block'}})}}
        </div>
        {{form_errors(form)}}
    {{form_end(form)}}
{%endblock%}

