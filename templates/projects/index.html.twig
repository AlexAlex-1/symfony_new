{%extends 'general.html.twig'%}
{%block title%}All projects {%endblock%}
{%block body%}
    {%for message in app.flashes('user_create') %}
        {{message}}
    {%endfor%}
    <center>
        <h2>Projects table</h2>
    </center>
    <table border=1 class="table">
        <tr>
            <th>ID</th>
            <th>Usr_id</th>
            <th>Name</th>
            <th>Link</th>
        </tr>
        {%for key in projects%}
            <tr>
                <td>{{key.id}}</td>
                <td>{{key.userid}}</td>
                <td>{{key.name}}</td>
                <td><a href="/projects/show/{{key.id}}">About</a></td>
            </tr>
        {%endfor%}
    </table>
    <a href="/projects/create">Create project</a>
{%endblock%}
