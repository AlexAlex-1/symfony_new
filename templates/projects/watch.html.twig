{%extends 'general.html.twig'%}
{%block title%}About this project{%endblock%}
{%block body%}
    <h2>Project {{project.name}}</h2>
    <table border=1 class="table">
        <label>
            Tickets project
        </label>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
        </tr>
        {% for key in tickets %}
            <tr>
                <th>{{key.id}}</th>
                <th>{{key.name}}</th>
                <th><a href="/projects/tickets/{{key.id}}">{{key.description}}</a></th>
            </tr>
        {% endfor %}
    </table>
    <a href="/projects/{{project.id}}/tickets/create">Create new ticket</a>
    <a href="/projects">Back</a>
    {%if is_granted('EDIT', project)%}
        <a href="/projects/edit/{{project.id}}">Edit</a>
        <a href="/projects/del/id={{project.id}}"class="text-danger"onclick="return confirm('Точно удалить?!')">Delete</a>
    {%endif%}
{%endblock%}
