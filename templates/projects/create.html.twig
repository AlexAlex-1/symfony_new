{%extends 'general.html.twig'%}
{%block body%}
    <center>
        <div class="form-group col-md-5">
            <h2>Create Project</h2>
            {{form_start(form)}}
                <div class="form-group col-md-12">
                    {{form_widget(form.Name, {'attr':{'placeholder':'Name:', 'autofocus':'on',
                    'class':'form-control'}})}}
                </div>
                <div class="form-group col-md-12">
                    {{form_widget(form.Submit, {'attr':{'class':'btn btn-primary btn-lg btn-block'}})}}
                </div>
                {{form_errors(form)}}
            {{form_end(form)}}
        </div>
    </center>
{%endblock%}
